<script>
function increaseBid(id) {
    let bid = document.getElementById(id);
    bid.innerText = parseInt(bid.innerText) + 1000000;
}

function sellPlayer(playerName, bidId, teamId) {

    let teams = ["CSK", "MI", "RCB", "KKR", "SRH", "DC"];
    let team = prompt("Enter Team Name:\nCSK / MI / RCB / KKR / SRH / DC");

    if (teams.includes(team)) {
        let price = document.getElementById(bidId).innerText;

        document.getElementById(teamId).innerHTML =
            "Sold to " + team + " for ‚Çπ" + price;
    }
    else {
        alert("Invalid Team Name");
    }
}
</script>

